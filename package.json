{
  "name": "apps",
  "version": "1.0.0",
  "description": "Thesis work of a full stack food delivery application called Dine & Dash",
  "author": "Dancs Kriszti√°n",
  "license": "MIT",
  "scripts": {
    "start:backend": "cd apps/backend && npm start:dev",
    "start:frontend": "cd apps/frontend && npm dev",
    "build:backend": "cd apps/backend && npm build",
    "build:frontend": "cd apps/frontend && npm build",
    "lint": "eslint apps/* --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint apps/* --ext .ts,.tsx --fix",
    "format": "prettier --write apps",
    "format:check": "prettier --check apps"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "apps/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.19.1"
  }
}
